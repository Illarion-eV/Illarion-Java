<nifty-controls>
    <controlDefinition name="dialog-character" style="illarion-dialog-character" visibleToMouse="true"
                       controller="org.illarion.nifty.controls.dialog.input.DialogCharacterControl">
        <control name="window" title="Nachricht" id="#window" visibleToMouse="true" width="422px">
            <panel childLayout="vertical" visibleToMouse="true" width="380px">
                <control name="label" id="#description" style="nifty-label" wrap="true" width="380px"/>
                <panel height="5px" width="1px"/>
                <control name="textfield" id="#input" maxlength="65536" width="380px"/>
                <panel height="5px" width="1px"/>
                <control name="label" id="#lookAt" style="nifty-label" wrap="true" width="380px" textHAlign="left"/>
                <panel id="#buttons" childLayout="center" visibleToMouse="true" width="380px">
                    <panel childLayout="horizontal" align="center">
                        <control name="button" id="#buttonLeft" label="OK" width="90px" marginRight="5px"/>
                        <control name="button" id="#buttonRight" label="Cancel" width="90px" marginLeft="5px"/>
                    </panel>
                </panel>
            </panel>
        </control>
    </controlDefinition>
</nifty-controls>
