<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui">
    <resourceBundle id="entering-bundle" filename="entering"/>

    <screen id="entering" controller="illarion.client.gui.controller.EnteringScreenController">
        <layer childLayout="vertical">
            <panel height="422px" width="*" backgroundImage="gui/window_background.png"
                   imageMode="repeat:0,0,1024,422"/>
        </layer>

        <layer childLayout="center">
            <panel childLayout="center">
                <effect>
                    <onStartScreen name="fade" startDelay="0" length="500" start="#0" end="#F"/>
                </effect>
                <panel childLayout="vertical">
                    <image filename="gui/illarion_title.png" imageMode="normal" align="center"/>
                    <control name="label" text="${entering-bundle.entering}" font="menuFont" align="center"
                             marginTop="20px" />
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>