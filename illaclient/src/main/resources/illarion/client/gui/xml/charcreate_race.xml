<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui">
    <resourceBundle id="charCreateRace-bundle" filename="charCreateRace"/>

    <screen id="characterCreateRace" controller="illarion.client.gui.controller.create.RaceScreenController">
        <layer childLayout="vertical">
            <panel height="422px" width="*" backgroundImage="gui/window_background.png"
                   imageMode="repeat:0,0,1024,422"/>
        </layer>

        <layer childLayout="center">
            <effect>
                <onStartScreen name="fade" start="#00" end="#ff" inherit="true"/>
            </effect>
            <panel width="100%" align="center" valign="center" backgroundColor="#0000"
                   childLayout="vertical" marginBottom="25px">
                <panel width="500px" childLayout="horizontal" align="center" marginBottom="20px">
                    <panel width="45%" childLayout="vertical">
                        <panel width="100%" height="100px" childLayout="center">
                            <control id="humanBtn" name="button" label="${charCreateRace-bundle.human.title}"
                                     width="100%" height="55px">
                                <effect>
                                    <onHover name="hint" hintStyle="illarion-hint"
                                             hintText="${charCreateRace-bundle.human.description}" />
                                </effect>
                            </control>
                            <panel height="100px" width="70px" childLayout="center" marginLeft="10px" align="left"
                                   visibleToMouse="false">
                                <image id="humanImage" align="center" valign="bottom" />
                            </panel>
                        </panel>
                        <panel width="100%" height="100px" childLayout="center">
                            <control id="dwarfBtn" name="button" label="${charCreateRace-bundle.dwarf.title}"
                                     width="100%" height="55px">
                                <effect>
                                    <onHover name="hint" hintStyle="illarion-hint"
                                             hintText="${charCreateRace-bundle.dwarf.description}" />
                                </effect>
                            </control>
                            <panel height="100px" width="70px" childLayout="center" marginLeft="10px" align="left"
                                   visibleToMouse="false">
                                <image id="dwarfImage" align="center" valign="bottom" />
                            </panel>
                        </panel>
                        <panel width="100%" height="100px" childLayout="center">
                            <control id="elfBtn" name="button" label="${charCreateRace-bundle.elf.title}"
                                     width="100%" height="55px">
                                <effect>
                                    <onHover name="hint" hintStyle="illarion-hint"
                                             hintText="${charCreateRace-bundle.elf.description}" />
                                </effect>
                            </control>
                            <panel height="100px" width="70px" childLayout="center" marginLeft="10px" align="left"
                                   visibleToMouse="false">
                                <image id="elfImage" align="center" valign="bottom" />
                            </panel>
                        </panel>
                    </panel>
                    <panel width="10%" height="0px" />
                    <panel width="45%" childLayout="vertical">
                        <panel width="100%" height="100px" childLayout="center">
                            <control id="halflingBtn" name="button" label="${charCreateRace-bundle.halfling.title}"
                                     width="100%" height="55px">
                                <effect>
                                    <onHover name="hint" hintStyle="illarion-hint"
                                             hintText="${charCreateRace-bundle.halfling.description}" />
                                </effect>
                            </control>
                            <panel height="100px" width="70px" childLayout="center" marginLeft="10px" align="left"
                                   visibleToMouse="false">
                                <image id="halflingImage" align="center" valign="bottom" />
                            </panel>
                        </panel>
                        <panel width="100%" height="100px" childLayout="center">
                            <control id="orcBtn" name="button" label="${charCreateRace-bundle.orc.title}"
                                     width="100%" height="55px">
                                <effect>
                                    <onHover name="hint" hintStyle="illarion-hint"
                                             hintText="${charCreateRace-bundle.orc.description}" />
                                </effect>
                            </control>
                            <panel height="100px" width="70px" childLayout="center" marginLeft="10px" align="left"
                                   visibleToMouse="false">
                                <image id="orcImage" align="center" valign="bottom" />
                            </panel>
                        </panel>
                        <panel width="100%" height="100px" childLayout="center">
                            <control id="lizardBtn" name="button" label="${charCreateRace-bundle.lizard.title}"
                                     width="100%" height="55px">
                                <effect>
                                    <onHover name="hint" hintStyle="illarion-hint"
                                             hintText="${charCreateRace-bundle.lizard.description}" />
                                </effect>
                            </control>
                            <panel height="100px" width="70px" childLayout="center" marginLeft="10px" align="left"
                                   visibleToMouse="false">
                                <image id="lizardImage" align="center" valign="bottom" />
                            </panel>
                        </panel>
                    </panel>
                </panel>

                <panel width="250px" height="35px" childLayout="center" align="center">
                    <control id="backToGenderBtn" name="button" label="${charCreateRace-bundle.back}"
                             width="100px" height="35px" align="left" />
                    <control id="cancelBtn" name="button" label="${charCreateRace-bundle.cancel}"
                             width="100px" height="35px" align="right" />
                </panel>
            </panel>
        </layer>
    </screen>
</nifty>
