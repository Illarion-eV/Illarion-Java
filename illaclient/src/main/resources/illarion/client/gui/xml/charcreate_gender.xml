<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui">
    <resourceBundle id="charCreateGender-bundle" filename="charCreateGender"/>

    <screen id="characterCreateGender" controller="illarion.client.gui.controller.create.GenderScreenController">
        <layer childLayout="vertical">
            <panel height="422px" width="*" backgroundImage="gui/window_background.png"
                   imageMode="repeat:0,0,1024,422"/>
        </layer>

        <layer childLayout="center">
            <effect>
                <onStartScreen name="fade" start="#00" end="#ff" inherit="true"/>
            </effect>
            <panel height="300px" width="600px" align="center" valign="center" backgroundColor="#0000"
                   childLayout="vertical" marginBottom="25px">
                <control name="label" text="${charCreateGender-bundle.title}" align="center"
                         width="600px" marginBottom="23px" font="captionFont" textHAlign="left" />
                <control name="label" text="${charCreateGender-bundle.description}" align="center"
                         wrap="true" width="600px" marginBottom="30px" textHAlign="left" />
                <panel width="650px" childLayout="horizontal" align="center">
                    <panel width="300px" childLayout="vertical">
                        <control id="maleBtn" name="button" label="${charCreateGender-bundle.male}" width="250px"
                                 height="35px" align="center" />
                        <panel width="300px" height="100px" childLayout="horizontal">
                            <panel height="100px" width="50px" childLayout="center">
                                <image id="humanMale" align="center" valign="bottom" />
                            </panel>
                            <panel height="100px" width="50px" childLayout="center">
                                <image id="dwarfMale" align="center" valign="bottom" />
                            </panel>
                            <panel height="100px" width="50px" childLayout="center">
                                <image id="elfMale" align="center" valign="bottom" />
                            </panel>
                            <panel height="100px" width="50px" childLayout="center">
                                <image id="halflingMale" align="center" valign="bottom" />
                            </panel>
                            <panel height="100px" width="50px" childLayout="center">
                                <image id="orcMale" align="center" valign="bottom" />
                            </panel>
                            <panel height="100px" width="50px" childLayout="center">
                                <image id="lizardMale" align="center" valign="bottom" />
                            </panel>
                        </panel>
                    </panel>
                    <panel width="50px" />
                    <panel width="300px" childLayout="vertical">
                        <control id="femaleBtn" name="button" label="${charCreateGender-bundle.female}" width="250px"
                                 height="35px" align="center" />
                        <panel width="300px" height="100px" childLayout="horizontal">
                            <panel height="100px" width="50px" childLayout="center">
                                <image id="humanFemale" align="center" valign="bottom" />
                            </panel>
                            <panel height="100px" width="50px" childLayout="center">
                                <image id="dwarfFemale" align="center" valign="bottom" />
                            </panel>
                            <panel height="100px" width="50px" childLayout="center">
                                <image id="elfFemale" align="center" valign="bottom" />
                            </panel>
                            <panel height="100px" width="50px" childLayout="center">
                                <image id="halflingFemale" align="center" valign="bottom" />
                            </panel>
                            <panel height="100px" width="50px" childLayout="center">
                                <image id="orcFemale" align="center" valign="bottom" />
                            </panel>
                            <panel height="100px" width="50px" childLayout="center">
                                <image id="lizardFemale" align="center" valign="bottom" />
                            </panel>
                        </panel>
                    </panel>
                </panel>

                <control id="cancelBtn" name="button" label="${charCreateGender-bundle.cancel}"
                         width="100px" height="35px" align="center" />
            </panel>
        </layer>
    </screen>
</nifty>
