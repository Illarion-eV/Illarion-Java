<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd
                           http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-illarion-style.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <useControls filename="nifty-illabutton.xml" />

    <screen id="options" controller="illarion.client.gui.controller.OptionScreenController">
    	<layer id="layer2" backgroundColor="#0000" childLayout="center">
	    	<panel height="300px" width="400px" align="center" valign="center" backgroundColor="#0000"
                   childLayout="vertical" visibleToMouse="true">

	    		<panel height="35px" width="300px" align="center" valign="center" backgroundColor="#0000"
                       childLayout="horizontal" visibleToMouse="true">
	    			<control id="general" name="button" style="illarion-tab" label="Allgemein" width="100"
                              height="35" >
                        <interact onClick="onGeneralTabClick()" />
                    </control>
	    			<control id="graphic" name="button" style="illarion-tab" label="Grafik" width="100" height="35" >
	    				<interact onClick="onGraphicTabClick()" />
	    			</control>
	    			<control id="audio" name="button" style="illarion-tab" label="Musik" width="100" height="35" >
                        <interact onClick="onAudioTabClick()" />
                    </control>
	    		</panel>
	    		<panel id="optionsPanel" height="300px" width="300px" align="center" valign="center"
                       backgroundColor="#051901ff" childLayout="overlay" visibleToMouse="true" />

    			<panel childLayout="horizontal" visibleToMouse="true">
                    <panel width="90px" />
                	<control id="saveBtn" name="illaButton" label="Speichern" width="100" height="35" >
                        <interact onRelease="save()" />
                    </control>
                    <panel width="20px" />
                    <control id="cancelBtn" name="illaButton" label="Abbrechen" width="100" height="35" >
                        <interact onRelease="cancel()" />
                    </control>
                </panel>

    			<effect>
                	<onStartScreen name="fade" start="#00" end="#ff" inherit="true" />
                	<onEndScreen name="fade" start="#ff" end="#00" length="500" inherit="true" />
                </effect>
	    	</panel>
	    </layer>
    </screen>
</nifty>