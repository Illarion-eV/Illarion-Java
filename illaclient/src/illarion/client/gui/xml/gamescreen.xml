<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd
                           http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
    <useStyles filename="nifty-illarion-style.xml" />
    <useControls filename="nifty-default-controls.xml" />
    <useControls filename="nifty-illabutton.xml" />
    <useControls filename="nifty-chatbox.xml" />
    <useControls filename="illarion-inventoryslot.xml" />

    <screen id="gamescreen" controller="illarion.client.gui.controller.GameScreenController">
        <layer id="gameLayer" childLayout="center" backgroundColor="#0000">
            <panel id="gamePanel" height="100%" width="100%" backgroundColor="#0000" visibleToMouse="false" childLayout="absolute">
                <control id="mapDropTarget" name="droppable" width="100%" height="100%" visibleToMouse="false" />
                <control id="mapDragObject" name="draggable" childLayout="center">
                    <image id="mapDragImage" width="100%" height="100%" visible="false" />
                </control>
            </panel>
        </layer>
        <layer id="mainLayer" backgroundColor="#0000" childLayout="center">
            <panel height="100%" width="100%" align="left" valign="bottom" backgroundColor="#0000" childLayout="vertical" visibleToMouse="false">
                <text id="main" font="textFont" text="" />
            </panel>
        </layer>
        <layer id="chatLayer" backgroundColor="#0000" childLayout="center">
            <panel height="201px" width="610px" align="left" valign="bottom" backgroundColor="#0000" childLayout="vertical" visibleToMouse="true">
                <panel height="191px" width="600px" align="right" valign="top" backgroundColor="#0000" childLayout="vertical" visibleToMouse="true">
                    <control name="scrollPanel" id="chatPanel" vertical="true" horizontal="false" height="161px"
                             width="600px" autoScroll="bottom" style="nifty-listbox">
                        <panel id="chatLog" x="10" y="10" width="565px" childLayout="vertical">
                        </panel>
                    </control>
                    <control name="textfield" id="chatMsg" style="chat-textfield" maxLength="255" width="600px" height="30px" font="textFont" wrap="true" />
                </panel>
            </panel>
        </layer>
        <layer id="windows" childLayout="absolute">
            <control id="inventory" name="window" style="inventory-window" title="Inventar" visible="false" width="248px" height="486px" x="400px" hideOnClose="true">
                <panel height="100%" width="100%" childLayout="absolute" visibleToMouse="false">
                    <control id="invslot_chest" name="inventoryslot" height="84px" width="46px" x="102px" y="67px" />
                    <control id="invslot_head" name="inventoryslot" height="40px" width="46px" y="12px" x="102px" />
                    <control id="invslot_legs" name="inventoryslot" height="64px" width="45px" x="102px" y="167px" />
                    <control id="invslot_feet" name="inventoryslot" height="45px" width="45px" x="102px" y="247px" />
                    <control id="invslot_bag" name="inventoryslot" height="55px" width="62px" x="22px" y="12px" />
                    <control id="invslot_lhand" name="inventoryslot" height="55px" width="62px" x="22px" y="127px" />
                    <control id="invslot_rfinger" name="inventoryslot" height="39px" width="23px" x="60px" y="198px" />
                    <control id="invslot_lfinger" name="inventoryslot" height="39px" width="23px" x="22px" y="198px" />
                    <control id="invslot_neck" name="inventoryslot" height="28px" width="38px" x="165px" y="23px" />
                    <control id="invslot_cloak" name="inventoryslot" height="43px" width="64px" x="165px" y="67px" />
                    <control id="invslot_rhand" name="inventoryslot" height="55px" width="64px" x="165px" y="127px" />
                    <control id="invslot_hands" name="inventoryslot" height="39px" width="64px" x="165px" y="198px" />
                    <control id="invslot_belt1" name="inventoryslot" height="55px" width="62px" x="15px" y="326px" />
                    <control id="invslot_belt2" name="inventoryslot" height="55px" width="62px" x="94px" y="326px" />
                    <control id="invslot_belt3" name="inventoryslot" height="55px" width="62px" x="172px" y="326px" />
                    <control id="invslot_belt4" name="inventoryslot" height="55px" width="62px" x="15px" y="397px" />
                    <control id="invslot_belt5" name="inventoryslot" height="55px" width="62px" x="94px" y="397px" />
                    <control id="invslot_belt6" name="inventoryslot" height="55px" width="62px" x="172px" y="397px" />
                </panel>
            </control>
            <control id="charlist" name="window" style="nifty-window" title="Charaktere" visible="true" hideOnClose="true" height="175px" width="250px" x="100px" y="100px">
                <panel childLayout="vertical">
                    <panel childLayout="horizontal">
                        <control name="label" text="Anzeige:" />
                        <panel width="3px" />
                        <control id="charlist-viewselection" style="nifty-drop-down" name="dropDown" width="*" />
                    </panel>
                    <panel height="3px" />
                    <panel childLayout="center">
                        <control id="charlist-list" name="listBox" style="nifty-list-box" displayItems="4" selection="Single" vertical="on" horizontal="off" />
                    </panel>
                    <panel height="3px" />
                </panel>
            </control>
        </layer>
    </screen>
</nifty>