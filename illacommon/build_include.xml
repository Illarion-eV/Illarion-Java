			<exclude name="*-win*" />
			<exclude name="*linux*" />
			<exclude name="*x11*" />
			<exclude name="*solaris*" />
			<exclude name="*i586*" />
			<exclude name="*amd64*" />
		</patternset>
		<patternset id="only.sunos.32">
			<exclude name="*.win*" />
			<exclude name="*-win*" />
			<exclude name="*linux*" />
			<exclude name="*osx*" />
			<exclude name="*amd64*" />
		</patternset>
		<patternset id="only.sunos.64">
