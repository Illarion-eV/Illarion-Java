    </style>

    <!-- Style for the quest log button -->
    <style id="nifty-button-quest-log#panel">
        <attributes backgroundImage="gui/button/questlog.png" width="24px" height="24px" childLayout="center"
                    visibleToMouse="true" align="center" valign="center"/>
    </style>

    <style id="nifty-button-quest-log#text">
        <attributes visible="false"/>
    </style>

    <!-- Style for the toggle run button -->
    <style id="nifty-button-toggle-run#panel">
        <attributes backgroundImage="gui/button/toggle_run.png" width="24px" height="24px" childLayout="center"
                    visibleToMouse="true" align="center" valign="center"/>
    </style>

    <style id="nifty-button-toggle-run#text">
