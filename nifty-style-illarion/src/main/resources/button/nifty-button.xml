<nifty-styles>
    <!-- Style for the blue button -->
    <style id="nifty-button-blue#panel">
        <attributes backgroundImage="gui/button/buttonblue.png" imageMode="resize:8,2,8,9,8,2,8,1,8,2,8,9"
                    paddingLeft="6px" paddingRight="6px" width="100px" height="23px" childLayout="center"
                    visibleToMouse="true"/>
        <effect>
            <onHover name="imageOverlay" filename="gui/button/buttonblue_hover.png"
                     imageMode="resize:8,2,8,9,8,2,8,1,8,2,8,9" post="true"/>
            <onClick name="imageOverlay" filename="gui/button/buttonblue_pressed.png"
                     imageMode="resize:8,2,8,9,8,2,8,1,8,2,8,9" post="true"/>
        </effect>
    </style>

    <style id="nifty-button-blue#text" base="button-font">
        <attributes align="center" valign="center" textHAlign="center" textVAlign="center" color="#ffff"/>
        <effect>
            <onClick name="move" mode="toOffset" direction="bottom" offsetY="1"/>
        </effect>
    </style>

    <!-- Style for the red button -->
    <style id="nifty-button-red#panel">
        <attributes backgroundImage="gui/button/buttonred.png" imageMode="resize:8,2,8,9,8,2,8,1,8,2,8,9"
                    paddingLeft="6px" paddingRight="6px" width="100px" height="23px" childLayout="center"
                    visibleToMouse="true"/>
        <effect>
            <onHover name="imageOverlay" filename="gui/button/buttonred_hover.png"
                     imageMode="resize:8,2,8,9,8,2,8,1,8,2,8,9" post="true"/>
            <onClick name="imageOverlay" filename="gui/button/buttonred_pressed.png"
                     imageMode="resize:8,2,8,9,8,2,8,1,8,2,8,9" post="true"/>
        </effect>
    </style>

    <style id="nifty-button-red#text" base="button-font">
        <attributes align="center" valign="center" textHAlign="center" textVAlign="center" color="#ffff"/>
        <effect>
            <onClick name="move" mode="toOffset" direction="bottom" offsetY="1"/>
        </effect>
    </style>

    <!-- Style for the gray button -->
    <style id="nifty-button-gray#panel">
        <attributes backgroundImage="gui/button/buttongray.png" imageMode="resize:8,2,8,9,8,2,8,1,8,2,8,9"
                    paddingLeft="6px" paddingRight="6px" width="100px" height="23px" childLayout="center"
                    visibleToMouse="true"/>
        <effect>
            <onHover name="imageOverlay" filename="gui/button/buttongray_hover.png"
